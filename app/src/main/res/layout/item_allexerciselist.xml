<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/nextbtn"
    android:foreground="?attr/selectableItemBackground"
    android:layoutDirection="ltr"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/addbtn"

        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:background="@drawable/addbtnbg"
        android:backgroundTint="@color/tbtncolor"
        android:padding="2dp"
        android:src="@drawable/ic_add_black_24dp"
        android:tint="@android:color/white" />

    <TextView
        android:id="@+id/excername"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/exceimage"
        android:layout_toEndOf="@+id/addbtn"
        android:fontFamily="@font/themefont"
        android:text="@string/jumping_jacks"
        android:textColor="@color/headercolor"
        android:textSize="18sp"
        android:textStyle="bold" />



        <ImageView
            android:id="@+id/exceimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:visibility="visible"
            />


    <ImageView
        android:id="@+id/imglock"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#8F000000"
        android:src="@drawable/ic_lock_black_24dp"
        android:padding="30dp"
        android:visibility="gone"
        android:tint="@android:color/white"/>


</RelativeLayout>
