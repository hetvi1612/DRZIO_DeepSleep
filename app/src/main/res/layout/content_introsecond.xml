<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:layoutDirection="ltr"

    >

    <drzio.insomnia.treatment.bedtime.yoga.sleep.customs.StatusBarView
        android:id="@+id/statusbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tbtncolor" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/btnnxt">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/headimg"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_colorhead" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:orientation="vertical">

               <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/to_set_regional_plan"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/themefont"
                    android:textSize="28sp"
                    android:textStyle="bold" />


               <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/get_daily_tips"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/themefont"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/txt_skip"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/skipbtnbg"
                android:orientation="horizontal">

               <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/skip"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="@font/themefont"
                    android:textColor="@color/tbtncolor"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/ic_arrow_forward_black_24dp"
                    android:tint="@color/tbtncolor"
                    />
            </LinearLayout>





            <LinearLayout
                android:id="@+id/lay2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headimg"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="30dp"
                android:orientation="vertical">

               <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_the_country"
                    android:textColor="@color/headercolor"
                    android:fontFamily="@font/thmefontlite"
                    android:textSize="18sp" />

               <TextView

                    android:layout_gravity="center"
                    android:id="@+id/btncountry"
                    android:text="@string/select"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:background="@drawable/borderbtn"
                    android:textSize="16sp"
                    android:paddingStart="20dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/smalltxtcolor"
                    android:layout_height="60dp"
                    android:paddingEnd="10dp"
                    android:fontFamily="@font/thmefontlite"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:drawableTint="@color/tbtncolor"/>


            </LinearLayout>



            <LinearLayout
                android:id="@+id/lay4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lay2"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="30dp"
                android:orientation="vertical">

               <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/strstate"
                    android:textColor="@color/headercolor"
                    android:textSize="18sp"
                    android:fontFamily="@font/thmefontlite"
                    />

               <TextView

                    android:layout_gravity="center"
                    android:id="@+id/btnstate"
                    android:text="@string/select"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/borderbtn"
                    android:textSize="16sp"
                    android:textColor="@color/smalltxtcolor"
                    android:fontFamily="@font/thmefontlite"
                    android:layout_height="60dp"
                    android:paddingEnd="10dp"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:drawableTint="@color/tbtncolor"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lay4"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="30dp"
                android:orientation="vertical">


               <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_city"
                    android:textColor="@color/headercolor"
                    android:textSize="18sp"
                    android:fontFamily="@font/thmefontlite"
                    />

               <TextView

                    android:layout_gravity="center"
                    android:id="@+id/btncity"
                    android:text="@string/select"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/borderbtn"
                    android:textSize="16sp"
                    android:textColor="@color/smalltxtcolor"
                    android:paddingEnd="10dp"
                    android:fontFamily="@font/thmefontlite"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:drawableTint="@color/tbtncolor"
                    android:layout_height="60dp" />



            </LinearLayout>


        </RelativeLayout>

    </ScrollView>


    <androidx.cardview.widget.CardView
        android:id="@+id/btnnxt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="25dp">

       <TextView

            android:id="@+id/textbtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradbtn"
            android:gravity="center"
            android:text="@string/next"
            android:fontFamily="@font/themefont"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>



</RelativeLayout>