<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layoutDirection="ltr"

    android:background="@drawable/dialogbg">

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

       <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/how_old_are_you"
            android:textColor="@color/headercolor"
            android:textSize="28sp"
            android:layout_gravity="center"
            android:fontFamily="@font/themefont"
            android:textStyle="bold" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/smalltxtcolor"/>


        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/agepicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:np_dividerColor="@color/tbtncolor"
            app:np_fadingEdgeEnabled="false"
            app:np_height="64dp"
            app:np_max="100"
            app:np_min="13"
            app:np_order="ascending"
            app:np_orientation="horizontal"
            app:np_selectedTextColor="@color/tbtncolor"
            app:np_selectedTextSize="25sp"
            app:np_textColor="@color/smalltxtcolor"
            app:np_textSize="16sp"
            app:np_value="20"
            app:np_wheelItemCount="5"
            app:np_width="180dp"
            app:np_wrapSelectorWheel="true" />

       <TextView

            android:id="@+id/btnclose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/ok"
            android:foreground="?attr/selectableItemBackground"

            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/gradbtn"
            android:fontFamily="@font/themefont"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:padding="10dp"/>


    </LinearLayout>


</LinearLayout>
