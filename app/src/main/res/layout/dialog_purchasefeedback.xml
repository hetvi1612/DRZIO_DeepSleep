<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layoutDirection="ltr"

    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    android:background="@android:color/transparent"
    android:foreground="@drawable/mainplan_select"

    app:cardElevation="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardCornerRadius="15dp"

        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <!--  <ImageView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:src="@drawable/feedbackbg"
                      android:visibility="visible" />-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="vertical">


                   <TextView

                        android:id="@+id/txtdesx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txttitle"
                        android:fontFamily="@font/themefont"
                        android:gravity="center"

                        android:text="Your feedback will help \nus improve our app"
                        android:textAllCaps="true"
                        android:textColor="@color/tbtncolor"
                        android:textSize="19sp" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="15dp">

                        <RadioButton
                            android:id="@+id/feedback_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:buttonTint="@color/tbtncolor"
                            android:checked="true"
                            android:fontFamily="@font/fontr_r"
                            android:text="@string/purchasefeed1"
                            android:textColor="@color/black"
                            android:textSize="20sp" />


                        <RadioButton
                            android:id="@+id/feedback_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:checked="false"
                            android:fontFamily="@font/fontr_r"
                            android:text="@string/purchasefeed2"
                            android:buttonTint="@color/tbtncolor"

                            android:textColor="@color/black"
                            android:textSize="20sp" />
                        <RadioButton
                            android:id="@+id/feedback_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:checked="false"
                            android:fontFamily="@font/fontr_r"
                            android:text="@string/purchasefeed3"
                            android:buttonTint="@color/tbtncolor"

                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    </RadioGroup>


                     <EditText


                        android:id="@+id/customfeedback"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/white_corner"
                        android:gravity="top"
                        android:hint="   Write Your Feedback.."
                        android:padding="10dp"
                        android:visibility="gone" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                       <TextView

                            android:id="@+id/btnclose"
                            android:foreground="?attr/selectableItemBackground"

                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/white_corner1"
                            android:fontFamily="@font/fontr_r"
                            android:gravity="center"
                            android:text="CANCEL"
                            android:textColor="@color/tbtncolor"
                            android:textSize="18sp" />

                       <TextView

                            android:id="@+id/btnok"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:foreground="?attr/selectableItemBackground"

                            android:background="@drawable/ramindbuttoncolor"
                            android:fontFamily="@font/fontr_r"
                            android:gravity="center"
                            android:text="SEND"
                            android:textColor="@color/def_pointer_color"
                            android:textSize="18sp" />


                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>