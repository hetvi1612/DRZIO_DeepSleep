<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialogbg"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layoutDirection="ltr"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lay3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay2"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

       <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/diet_plan"
            android:textColor="@color/headercolor"
            android:textSize="28sp"
            android:layout_gravity="center"
            android:fontFamily="@font/themefont"
            android:textStyle="bold" />

       <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to_personalize_your_plan"
            android:fontFamily="@font/themefont"
            android:layout_gravity="center"
            android:textColor="@color/smalltxtcolor"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay3"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_veg"
            android:foreground="?attr/selectableItemBackground"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_veg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/vegunselect" />

           <TextView

                android:id="@+id/txt_veg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/vegetarian"
                android:fontFamily="@font/themefont"
                android:textColor="@color/smalltxtcolor"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/btn_nonveg"
            android:foreground="?attr/selectableItemBackground"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_nonveg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/nonvegunselect" />

           <TextView

                android:id="@+id/txt_nonveg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:fontFamily="@font/themefont"
                android:text="@string/non_nvegetarian"
                android:textColor="@color/smalltxtcolor"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/btn_vegan"
            android:foreground="?attr/selectableItemBackground"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_vegan"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/veganunselect" />

           <TextView

                android:id="@+id/txt_vegan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/vegan"
                android:fontFamily="@font/themefont"
                android:textColor="@color/smalltxtcolor"
                android:textSize="16sp" />
        </LinearLayout>


    </LinearLayout>

   <TextView

        android:id="@+id/btnclose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:textSize="20sp"
        android:foreground="?attr/selectableItemBackground"

        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/gradbtn"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:padding="10dp"/>

</LinearLayout>
