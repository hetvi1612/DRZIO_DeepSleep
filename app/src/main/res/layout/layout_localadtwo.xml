<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/localad2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:layoutDirection="ltr"

    android:visibility="gone"
    android:background="#182641">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        />



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_appwd"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="15dp"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginStart="15dp"
        android:layout_toStartOf="@+id/imageView2"
        android:layout_marginTop="17dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/homepagefont"
            android:text="@string/water_drink_reminder_app"


            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:visibility="visible" />

        <org.sufficientlysecure.htmltextview.HtmlTextView
            android:id="@+id/appdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/thmefontlite"
            android:maxLines="2"


            android:text="Track Your Daily Drinking Habit"
            android:textColor="#70FFFFFF"
            android:textSize="14sp"
            android:visibility="visible" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="45dp"
        android:layout_height="46dp"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        android:src="@drawable/ic_info_outline_black_24dp"
        android:tint="#70FFFFFF"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentEnd="true"/>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/gradbtn"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/homepagefont"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="@string/install_now"


        android:layout_below="@+id/linearLayout"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:background="@color/themegreen"
        android:fontFamily="@font/themefont"
        android:gravity="center"
        android:text="@string/ad"


        android:textColor="@android:color/white" />


</RelativeLayout>