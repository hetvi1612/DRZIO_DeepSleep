<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.formats.NativeContentAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    android:layoutDirection="ltr"

    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/adframe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/contentad_image"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:gravity="center"
                android:scaleType="centerCrop"/>


            <RelativeLayout
                android:id="@+id/native_layout"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_centerVertical="true">

                <RelativeLayout
                    android:id="@+id/ad_icon_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10.0dip">

                    <ImageView
                        android:id="@+id/ad_icon_imageview"
                        android:layout_width="50.0dip"
                        android:layout_height="50.0dip"
                        android:layout_gravity="center_vertical" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginStart="8.0dip"
                    android:layout_marginEnd="8.0dip"
                    android:layout_toStartOf="@+id/ly_ad_action_textview"
                    android:layout_toEndOf="@+id/ad_icon_layout"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ad_title_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="start"
                            android:maxLines="2"
                            android:gravity="start"
                            android:text=""
                            android:fontFamily="@font/fontr_m"
                            android:layout_alignParentStart="true"
                            android:textColor="@color/headercolor"
                            android:layout_toStartOf="@+id/tmp"
                            android:textSize="14.0sp" />

                        <ImageView
                            android:id="@+id/tmp"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="10dp"
                            android:tint="#606060"
                            android:src="@drawable/td_sign_ad_green"/>

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/ad_describe_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:fontFamily="@font/fontr_r"
                        android:textColor="@color/smalltxtcolor"
                        android:textSize="12.0sp" />
                </LinearLayout>
            </RelativeLayout>


            <TextView
                android:id="@+id/ad_action_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/fontr_m"
                android:textAllCaps="true"
                android:background="@drawable/bg_ad_btn_banner"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

        </LinearLayout>
    </RelativeLayout>

</com.google.android.gms.ads.formats.NativeContentAdView>


