<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"

    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/dialogbg"
        android:orientation="vertical"
        android:visibility="visible">



        <com.yugansh.tyagi.smileyrating.SmileyRatingView
            android:id="@+id/smiley_view"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="280dp"
            app:face_color="@color/tbtncolor"
            app:mouth_color="@color/headercolor"
            app:eyes_color="@color/headercolor"
            app:default_rating="4"/>



       <TextView

            android:id="@+id/txtdesx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txttitle"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text=""
            android:fontFamily="@font/themefont"
            android:textColor="@color/headercolor"
            android:textSize="20sp" />


        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:numStars="5"
            android:rating="5"
            android:stepSize="1"
            android:theme="@style/RatingBar" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:orientation="horizontal">



           <TextView

                android:id="@+id/btnclose"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                 android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"

                android:background="@drawable/gradbtn"
                android:gravity="center"
                android:text="@string/close"
                android:textStyle="bold"
                android:fontFamily="@font/themefont"
                android:textColor="@android:color/white"
                android:textSize="18sp"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               android:layout_marginBottom="10dp" />

           <TextView

                android:id="@+id/btnok"
                android:foreground="?attr/selectableItemBackground"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                 android:layout_weight="1"
                android:background="@drawable/gradbtn"
                android:gravity="center"
                android:text="@string/rate_us"
                android:textStyle="bold"
                android:fontFamily="@font/themefont"
                android:textColor="@android:color/white"
                android:textSize="18sp"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               android:layout_marginBottom="10dp"/>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
