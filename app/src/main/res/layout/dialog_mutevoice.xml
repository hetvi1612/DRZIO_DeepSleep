<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    app:cardCornerRadius="5dp"
    android:layoutDirection="ltr"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialogbg"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

       <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sound_options"
            android:textSize="25sp"
            android:fontFamily="@font/themefont"
            android:textColor="@color/headercolor"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_margin="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_volume_up_black_24dp"
                android:padding="10dp"
                android:tint="@color/tbtncolor"/>

           <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mute"
                android:layout_gravity="center_vertical"
                android:textColor="@color/headercolor"
                android:fontFamily="@font/themefont"
                android:textSize="16sp"/>

            <Switch
                android:id="@+id/switchmute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:theme="@style/SwitchTheme"
                android:layout_gravity="end|end|center_vertical"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img_voiceguide"
                android:padding="13dp"
                android:tint="@color/tbtncolor"/>

           <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/voice_guide"
                android:fontFamily="@font/themefont"
                android:layout_gravity="center_vertical"
                android:textColor="@color/headercolor"
                android:textSize="16sp"/>

            <Switch
                android:id="@+id/switchguidevoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:theme="@style/SwitchTheme"
                android:layout_gravity="end|end|center_vertical"/>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_record_voice_over_black_24dp"
                android:padding="11dp"
                android:tint="@color/tbtncolor"/>

           <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coach_tips"
                android:fontFamily="@font/themefont"
                android:layout_gravity="center_vertical"
                android:textColor="@color/headercolor"
                android:textSize="16sp"/>

            <Switch
                android:id="@+id/switchtipsvoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:theme="@style/SwitchTheme"
                android:layout_gravity="end|end|center_vertical"/>
        </LinearLayout>


           <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/change_background_music"
                android:layout_gravity="center_vertical"
                android:textColor="@color/headercolor"
                android:fontFamily="@font/themefont"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="15dp"
                android:textSize="18sp"/>

            <ListView
                android:id="@+id/songslist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />

       <TextView

            android:id="@+id/txtdialok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
           android:layout_marginBottom="20dp"
            android:foreground="?attr/selectableItemBackground"

            android:background="@drawable/gradbtn"
            android:fontFamily="@font/themefont"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/ok"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

</androidx.cardview.widget.CardView>