<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layoutDirection="ltr"

    android:background="@drawable/dialogbg">


    <LinearLayout
        android:id="@+id/lay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

           <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_height"
                android:fontFamily="@font/themefont"
                android:textColor="@color/headercolor"
                android:textSize="28sp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/switchcminch"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/switchbg"
                android:orientation="horizontal"
                >


               <TextView

                    android:id="@+id/btcm"
                    android:foreground="?attr/selectableItemBackground"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/cm"
                    android:fontFamily="@font/themefont"
                    android:textColor="@color/headercolor"
                    android:textStyle="bold"/>

               <TextView

                    android:id="@+id/btinch"
                    android:foreground="?attr/selectableItemBackground"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/themefont"
                    android:text="@string/ftinch" />

            </LinearLayout>


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/inchlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:orientation="vertical">

           <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ft"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/themefont"
                android:textColor="@color/smalltxtcolor"/>

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/ftpicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:np_dividerColor="@color/tbtncolor"
                app:np_fadingEdgeEnabled="false"
                app:np_height="64dp"
                app:np_max="10"
                app:np_min="0"
                app:np_order="ascending"
                app:np_orientation="horizontal"
                app:np_selectedTextColor="@color/tbtncolor"
                app:np_selectedTextSize="25sp"
                app:np_textColor="@color/smalltxtcolor"
                app:np_textSize="16sp"
                app:np_value="5"
                app:np_wheelItemCount="5"
                app:np_width="180dp"
                app:np_wrapSelectorWheel="true" />

           <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inch"
                android:fontFamily="@font/themefont"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/smalltxtcolor"/>

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/inchpicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:np_dividerColor="@color/tbtncolor"
                app:np_fadingEdgeEnabled="false"
                app:np_height="64dp"
                app:np_max="11"
                app:np_min="0"
                app:np_order="ascending"
                app:np_orientation="horizontal"
                app:np_selectedTextColor="@color/tbtncolor"
                app:np_selectedTextSize="25sp"
                app:np_textColor="@color/smalltxtcolor"
                app:np_textSize="16sp"
                app:np_value="0"
                app:np_wheelItemCount="5"
                app:np_width="180dp"
                app:np_wrapSelectorWheel="true" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cmlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

           <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cm"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/themefont"
                android:textColor="@color/smalltxtcolor"/>

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/cmpicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:np_dividerColor="@color/tbtncolor"
                app:np_fadingEdgeEnabled="false"
                app:np_height="64dp"
                app:np_max="400"
                app:np_min="20"
                app:np_order="ascending"
                app:np_orientation="horizontal"
                app:np_selectedTextColor="@color/tbtncolor"
                app:np_selectedTextSize="25sp"
                app:np_textColor="@color/smalltxtcolor"
                app:np_textSize="16sp"
                app:np_value="100"
                app:np_wheelItemCount="5"
                app:np_width="180dp"
                app:np_wrapSelectorWheel="true" />


        </LinearLayout>


       <TextView

            android:id="@+id/btnclose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:foreground="?attr/selectableItemBackground"

            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/gradbtn"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:fontFamily="@font/themefont"
            android:layout_gravity="end"
            android:padding="10dp"/>

    </LinearLayout>


</LinearLayout>
