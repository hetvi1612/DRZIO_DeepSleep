<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"

    android:layout_centerVertical="true">

    <drzio.insomnia.treatment.bedtime.yoga.sleep.customs.StatusBarView
        android:id="@+id/statusbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <LinearLayout
            android:id="@+id/lay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

           <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/themefont"
                android:text="@string/what_s_your_gender"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

           <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/themefont"
                android:text="@string/to_personalize_your_plan"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lay2"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay1"
            android:layout_centerVertical="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="40dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_female"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:foreground="?attr/selectableItemBackground"

                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_femele"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:src="@drawable/app_storemodle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                   <TextView

                        android:id="@+id/txt_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/themefont"
                        android:text="@string/female"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/femalesele"
                        android:src="@drawable/ic_checkbox_checked"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:visibility="gone"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/btn_male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_male"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:foreground="?attr/selectableItemBackground"

                    android:scaleType="centerCrop"
                    android:src="@drawable/app_storemodlemen1" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                   <TextView

                        android:id="@+id/txt_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/themefont"
                        android:text="@string/male"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/malesele"
                        android:src="@drawable/ic_checkbox_checked"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnnxt"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_below="@+id/lay2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="60dp"
            app:cardCornerRadius="10dp">

           <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradbtn"
                android:fontFamily="@font/themefont"
                android:gravity="center"
                android:text="@string/next"
                android:foreground="?attr/selectableItemBackground"

                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</RelativeLayout>