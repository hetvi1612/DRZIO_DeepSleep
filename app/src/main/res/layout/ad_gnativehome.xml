<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.formats.NativeContentAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"

    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/native_layout"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true">

                <RelativeLayout
                    android:id="@+id/ad_icon_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                   >
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/contentad_image"
                        android:layout_width="180.0dip"
                        android:layout_height="120.0dip"
                        android:scaleType="centerCrop"
                        app:riv_corner_radius="5dp"
                        android:layout_gravity="center_vertical" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginStart="5.0dip"
                    android:layout_marginEnd="8.0dip"
                    android:layout_toStartOf="@+id/ly_ad_action_textview"
                    android:layout_toEndOf="@+id/ad_icon_layout"
                    android:gravity="center_vertical"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/ad_title_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/fontr_m"
                        android:drawableEnd="@drawable/td_sign_ad_green"
                        android:drawableTint="#606060"
                        android:gravity="start"
                        android:maxLines="2"
                        android:textColor="@color/headercolor"
                        android:textSize="14.0sp" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/ad_describe_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/fontr_r"
                            android:maxLines="2"
                            android:layout_centerVertical="true"
                            android:textColor="@color/smalltxtcolor"
                            android:textSize="12.0sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ly_ad_action_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/transimg"
                            android:layout_width="match_parent"
                            android:layout_height="40dp" />

                        <TextView
                            android:id="@+id/ad_action_button"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/fontr_m"
                            android:gravity="center"
                            android:maxLines="2"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:textSize="16.0sp"
                            />
                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

</com.google.android.gms.ads.formats.NativeContentAdView>


